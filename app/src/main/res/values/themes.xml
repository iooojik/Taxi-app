<resources>
    <!-- Base application theme. -->
    <style name="Theme.TaxiApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/dark_blue</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="textInputStyle">@style/custom_text_input_layout</item>
        <item name="materialButtonStyle">@style/custom_outlined_button</item>
        <item name="floatingActionButtonStyle">@style/floatingActionButtonStyle</item>
    </style>

    <style name="custom_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">@dimen/buttons_border_width</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/buttons_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/buttons_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/buttons_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/buttons_corner_radius</item>
        <item name="boxBackgroundColor">@color/background_text_input</item>
    </style>

    <style name="custom_outlined_button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="strokeWidth">@dimen/buttons_border_width</item>
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">@dimen/buttons_corner_radius</item>
        <item name="android:padding">@dimen/buttons_text_padding</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="floatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/fab_margin">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/fab_margin"
        android:text="@string/open_in" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="@dimen/bottom_messengers_size"
            android:layout_height="@dimen/bottom_messengers_size"
            android:layout_weight="1"
            android:contentDescription="@string/download_whatsapp"
            android:src="@drawable/whatsapp_logo" />

        <ImageView
            android:id="@+id/viber"
            android:layout_width="@dimen/bottom_messengers_size"
            android:layout_height="@dimen/bottom_messengers_size"
            android:layout_weight="1"
            android:contentDescription="@string/download_viber_description"
            android:src="@drawable/viber" />
    </LinearLayout>

</LinearLayout>